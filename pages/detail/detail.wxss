/* pages/detail/detail.wxss */
.detailContainer {
  display: flex;
  flex-direction: column;
  position: relative;
}

.headImg {
  width: 100%;
  height: 460rpx;
}
.musicImg {
  position: absolute;
  height: 60rpx;
  width: 60rpx;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}

.avatar_date {
  padding: 10rpx;
}

.avatar_date image{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.avatar_date text {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
}

.collection_share_container {
  position: relative;
}
.collection {
  display: flex;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.collection_share_container image{
  height: 90rpx;
  width: 90rpx;
  margin: 20rpx 5rpx 20rpx;
}

.line {
  position: absolute;
  width: 90%;
  background-color: #aaa;
  height: 1rpx;
  top: 65rpx;
  left: 5%;
  z-index: -1;
}

button {
  width: 280rpx;
}

.content {
  background-color: rgb(245, 223, 191);
  padding: 30rpx 5rpx;
  margin-top: 20rpx;
  text-indent: 32rpx;
  font-size: 32rpx;
  box-shadow: 0px 0px 5px #888888;
  border-radius: 20rpx;
}


