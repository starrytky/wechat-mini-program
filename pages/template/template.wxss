.tmpContainer {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0px 0px 5px #888888;
}

.avatar_data {
  margin: 10rpx 0 0 10rpx;
}

.avatar_data image {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.avatar_data text {
  font-size: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 0  0 10rpx ;
  line-height: 36rpx;
}

.content_img {
  width: 100%;
  height: 460rpx;
}

.content {
  font-size: 32rpx;
  text-indent: 64rpx;
  /* box-shadow: 0px 0px 5px 1px #888888; */
  padding: 20rpx 20rpx 0;
  border-radius: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  min-height: 108rpx;
}

.love_attention {
  display: flex;
  justify-content: flex-end;
  margin: 10rpx;
}
.love_attention image{
  height: 32rpx;
  width: 32rpx;
  vertical-align: middle;
}

.love_attention text {
  font-size: 32rpx;
  margin: 0 30rpx 0 10rpx;
  line-height: 32rpx;
}